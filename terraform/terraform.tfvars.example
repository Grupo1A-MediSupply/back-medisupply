# Archivo de ejemplo para variables de Terraform
# Copia este archivo como terraform.tfvars y ajusta los valores según tu entorno

# Configuración general
project_id  = "your-gcp-project-id"
region      = "us-central1"
environment = "production"
project_name = "medisupply"

# Configuración Cloud Run
service_name   = "medisupply-monolith"
container_port = 8000
min_instances  = 0
max_instances  = 10
cpu_limit      = "2"
memory_limit   = "2Gi"
image_tag      = "latest"
allow_unauthenticated = true

# Configuración Artifact Registry
artifact_registry_name = "medisupply-docker-repo"

# Configuración Cloud SQL (opcional)
enable_cloud_sql      = false
db_version            = "POSTGRES_15"
db_tier               = "db-f1-micro"
db_availability_type  = "ZONAL"
db_disk_size          = 20
db_name               = "medisupply"
db_user               = "medisupply"
db_password           = "your-secure-password-here"

# Configuración Service Account
# Opción 1: Crear nuevo Service Account (requiere permisos iam.serviceAccounts.create)
create_service_account = true

# Opción 2: Usar Service Account existente (si no tienes permisos para crear)
# create_service_account = false
# service_account_email = "mi-service-account@proyecto.iam.gserviceaccount.com"

# Labels personalizados
labels = {
  project     = "medisupply"
  environment = "production"
  managed_by  = "terraform"
  owner       = "your-team"
  cost_center = "engineering"
}
